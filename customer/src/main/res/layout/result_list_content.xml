<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewRestaurantLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintCircleRadius="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewShopStatus"
                style="@style/TextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewLabelAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewRestaurantLogo"
                app:layout_constraintVertical_bias="0.0" />

            <RatingBar
                android:id="@+id/ratingBarAvgReview"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textViewRestaurantName"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/imageViewRestaurantLogo"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/textViewIndicatorAvgReview"
                style="@style/TextViewVerySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/ratingBarAvgReview"
                app:layout_constraintTop_toBottomOf="@+id/textViewRestaurantName" />

            <TextView
                android:id="@+id/textViewLabelMinPrice"
                style="@style/TextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minimum_purchase"
                app:layout_constraintStart_toEndOf="@+id/imageViewRestaurantLogo"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarAvgReview"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textViewMinPrice"
                style="@style/TextViewSmallValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/textViewLabelMinPrice"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarAvgReview" />

            <TextView
                android:id="@+id/textViewLabelDeliveryCost"
                style="@style/TextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivey_cost"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarAvgReview"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/textViewMinPrice"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/textViewDeliveryCost"
                style="@style/TextViewSmallValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewLabelDeliveryCost"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarAvgReview" />

            <TextView
                android:id="@+id/textViewRestaurantName"
                style="@style/TextViewLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewRestaurantLogo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewLabelAddress"
                style="@style/TextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="@string/address"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewRestaurantLogo"
                app:layout_constraintTop_toBottomOf="@+id/textViewLabelMinPrice"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewAddress"
                style="@style/TextViewSmallValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewLabelAddress"
                app:layout_constraintTop_toBottomOf="@+id/textViewLabelMinPrice"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>