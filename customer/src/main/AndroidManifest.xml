<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.uniba.di.sms1920.everit.customer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.accountDetail.AccountDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.cartActivity.CartActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.AddressChooserActivity"
            android:label="@string/title_address_chooser"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.reviews.ReviewListActivity"
            android:label="@string/title_review_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.reviews.ReviewDetailActivity"
            android:label="@string/title_review_detail"
            android:parentActivityName=".activities.reviews.ReviewListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniba.di.sms1920.everit.customer.activities.reviews.ReviewListActivity" />
        </activity>
        <activity
            android:name=".activities.results.ResultListActivity"
            android:label="@string/title_result_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.results.ResultDetailActivity"
            android:label="@string/title_result_detail"
            android:parentActivityName=".activities.results.ResultListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniba.di.sms1920.everit.customer.activities.results.ResultListActivity" />
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.LauncherActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.orders.OrderListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.orders.OrderDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="everit.customer.order.detail"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.here.android.maps.appid"
            android:value="@string/HERE_APP_ID" />
        <meta-data
            android:name="com.here.android.maps.apptoken"
            android:value="@string/HERE_APP_CODE" />
        <meta-data
            android:name="com.here.android.maps.license.key"
            android:value="@string/HERE_LICENSE" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notification_channel_id"/>

        <service android:name="it.uniba.di.sms1920.everit.customer.CustomerNotificationService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name="com.here.android.mpa.service.MapService"
            android:label="HereMapService">
            <intent-filter>
                <action android:name="com.here.android.mpa.service.MapService.v3" />
            </intent-filter>
        </service>
    </application>

</manifest>